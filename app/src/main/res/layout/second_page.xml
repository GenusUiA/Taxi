<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Taxi"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@color/black"
        android:text="      Taxi"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SNP -->
    <TextView
        android:id="@+id/WrittenSNP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Surname"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/WrittenPhone"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Taxi"
        app:layout_constraintWidth_percent="0.45" />

    <!-- Telephone Number-->
    <TextView
        android:id="@+id/WrittenPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Future number"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/WrittenPhone"
        app:layout_constraintTop_toBottomOf="@id/WrittenSNP"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/ButtonSetPath"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SET PATH"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray_dark"
        app:layout_constraintTop_toBottomOf="@id/WrittenPhone"
        app:layout_constraintStart_toStartOf="@id/WrittenPhone"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


    <!-- Order taxi -->
    <TextView
        android:id="@+id/OrderTaxi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/WrittenPhone"
        app:layout_constraintBottom_toTopOf="@id/buttonCallTaxi"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/buttonCallTaxi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:backgroundTint="@color/gray"
        android:text="CALL TAXI"
        android:textColor="@color/black"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@id/WrittenPhone"
        app:layout_constraintTop_toBottomOf="@id/WrittenPhone" />

</androidx.constraintlayout.widget.ConstraintLayout>
